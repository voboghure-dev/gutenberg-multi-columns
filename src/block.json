{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "create-block/multi-columns",
	"version": "1.0.0",
	"title": "Multi Columns",
	"category": "design",
	"icon": "columns",
	"description": "Example block scaffolded with Create Block tool.",
	"example": {},
	"keywords": ["newspaper", "columns", "flow", "text"],
	"parent": ["core/post-content"],
	"supports": {
		"html": true,
		"color": {},
		"spacing": {
			"margin": true,
			"padding": true
		},
		"align": ["wide", "full"]
	},
	"attributes": {
		"columnCount": {
			"type": "integer",
			"default": 4
		},
		"columnWidth": {
			"type": "integer",
			"default": 100
		},
		"columnGap": {
			"type": "integer",
			"default": 10
		},
		"columnRuleStyle": {
			"type": "string",
			"default": "solid"
		},
		"columnRuleWidth": {
			"type": "integer",
			"default": 1
		},
		"columnRuleColor": {
			"type": "string",
			"default": "#b8b8b8"
		},
		"style": {
			"type": "object",
			"default": {
				"color": {
					"text": "#3a3a3a",
					"background": "#fbf9f4"
				},
				"spacing": {
					"padding": {
						"top": "10px",
						"right": "10px",
						"bottom": "10px",
						"left": "10px"
					},
					"margin": {
						"top": "10px",
						"right": "10px",
						"bottom": "10px",
						"left": "10px"
					}
				}
			}
		}
	},
	"textdomain": "multi-columns",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js"
}
